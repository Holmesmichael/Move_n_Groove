<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-6" style="margin-top: 100px;">
        <div class="workout-index">

          <h1>Workout</h1>

          <table>
            <thead>
              <tr>
                <th>Duration</th>
                <th>Notes</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @workouts.each do |workout| %>

                <% if workout.user == current_user %>

                    <tr>
                    <td><%= workout.duration %></td>
                    <td><%= workout.notes %></td>
                    <td><%= link_to 'Show', workout %></td>
                    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
                    <td><%= link_to 'Delete', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  
                  <% end  %>
              <% end %>

            </tbody>
          </table>

          <br>

          <%= link_to 'New Workout', new_workout_path %>
        </div>
    </div>

    <div class="col-md-3">
    </div>
    </div>
  </div>
</div>
