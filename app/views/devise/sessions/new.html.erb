<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-6" style="margin-top: 100px;">
        <div class="log-in">
          <h2>Log in</h2>
          <br />
          <br />

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.input :email %>
            </div>

            <div class="field">
              <%= f.input :password %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.button :submit %>
            </div>
          <% end %>
      </div>

      <div class="col-md-3">
      </div>
    </div>
  </div>
</div>


