<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">

    <div class="col-md-3" >
    </div>
  

    <div class="col-md-6" style="margin-top: 100px;">
      <div class="activities-index">
            <h1>Activities</h1>
            <table>
              <thead>
                <tr>
                  <th colspan="3"></th>
                  <% if user_signed_in?  %>
                    <button type="button" class="btn btn-primary"><%= link_to 'Log my workout', new_workout_path %></button>
                  <% end %>
                </tr>
              </thead>

              <tbody>
              
                <% @activities.each do |activity| %>
                  <tr>
                    <td><%= activity.name %></td>
                  </tr>
                <% end %>


              </tbody>
            </table>

            <% if user_signed_in?  %>
              <button type="button" class="btn btn-primary"><%= link_to 'New Activity', new_activity_path %></button>
            <% end %>
            
        </div>
    </div>

    <div class="col-md-3">
    </div>

  </div>
</div>
