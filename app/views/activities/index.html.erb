<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">

    <div class="col-md-3">
    <%= image_tag("field.png", {:style => "width:100%;"}) %>
    

    </div>
  

    <div class="col-md-6">
      <div class="jumbotron">
          <h1>Activities</h1>

          <table>
            <thead>
              <tr>
                <th>Types</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @activities.each do |activity| %>
                <tr>
                  <td><%= activity.name %></td>

                  <% if user_signed_in?  %>
                
                  <td><%= link_to 'Show', activity %></td>
                  <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                  <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>

            </tbody>
          </table>
          
        </div>
    </div>

    <div class="col-md-3">
    <%= image_tag("field.png", {:style => "width:100%;"}) %>
    </div>

  </div>
</div>
