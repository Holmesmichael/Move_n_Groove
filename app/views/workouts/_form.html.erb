<%= form_with(model: workout, local: true) do |form| %>
  <div class="container">
    <div class="jumbotron">

      <div class="Activity">
       <%= form.select(:activity_id, options_from_collection_for_select(@activity, :id, :name)) %> 
      </div>

    
      <div class="field">
        <%= form.label :duration %>
        <%= form.number_field :duration, id: :workout_duration %>
      </div>

      <div class="field">
        <%= form.label :notes %>
        <%= form.text_field :notes, id: :workout_notes %>
      </div>


      <div class="actions">
        <%= form.submit %>
      </div>

    </div>
  </div>

<% end %>
