<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">

    <div class="col-md-3">
    <%= image_tag("field.png", {:style => "width:100%;"}) %>
    

    </div>
  

    <div class="col-md-6">
      <div class="jumbotron">
          <h1>Activities</h1>

          <table>
            <thead>
              <tr>
                <th colspan="3"></th>
                 <% if user_signed_in?  %>
                  <button type="button" class="btn btn-warning"><%= link_to 'Get in shape', new_workout_path %></button>
                 <% end %>
              </tr>
            </thead>

            <tbody>
            
               <% @activities.each do |activity| %>
                <tr>
                  <td><%= activity.name %></td>
                </tr>
              <% end %>


            </tbody>
               <thead>
              <tr>
                <th colspan="3"></th>
                 <% if user_signed_in?  %>
                  <button type="button" class="btn btn-primary"><%= link_to 'New Activity', new_activity_path %></button>
                 <% end %>
              </tr>
            </thead>
          </table>
          
        </div>
    </div>

    <div class="col-md-3">
    <%= image_tag("field.png", {:style => "width:100%;"}) %>
    </div>

  </div>
</div>
