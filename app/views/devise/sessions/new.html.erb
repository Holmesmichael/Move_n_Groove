<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-6" style="margin-top: 100px;">
        <div class="log-in">
          <h2>Log in</h2>
          <br />
          <br />

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Sign In" %>
            </div>
          <% end %>
      </div>

      <div class="col-md-3">
      </div>
    </div>
  </div>
</div>



