<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="col-md-6" style="margin-top: 100px;">
        <div class="workout-index">

          <h1>Workout</h1>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">Duration (minutes) </th>
                  <th scope="col">Notes (How was your session?)</th>
                  <th scope="col" colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @workouts.each do |workout| %>

                  <% if workout.user == current_user %>

                      <tr>
                      <td><%= workout.duration %></td>
                      <td><%= workout.notes %></td>
                      <td><button type="button" class="btn btn-warning"><%= link_to 'View', workout_path(workout) %></button><td>
                      </tr>
                    
                    <% end  %>
                <% end %>

              </tbody>
            </table>
    
           <button type="button" class="btn btn-primary"><%= link_to 'New Workout', new_workout_path %></button>
        </div>
    </div>

    <div class="col-md-3">
    </div>
    </div>
  </div>
</div>


   
